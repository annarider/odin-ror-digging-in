<div class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <%# Welcome Header %>
    <div class="text-center mb-8">
      <div class="text-6xl mb-4">ðŸŒ±</div>
      <h1 class="text-4xl font-bold text-midnight-soil mb-2">Join GardenBook</h1>
      <p class="text-slate-mist">Create your account and start growing!</p>
    </div>

    <%# Sign Up Card %>
    <div class="card p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%# Name Field %>
        <div>
          <%= f.label :name, class: "block text-sm font-semibold text-midnight-soil mb-2" %>
          <%= f.text_field :name,
              autofocus: true,
              autocomplete: "name",
              placeholder: "Your name",
              class: "input-field" %>
        </div>

        <%# Email Field %>
        <div>
          <%= f.label :email, class: "block text-sm font-semibold text-midnight-soil mb-2" %>
          <%= f.email_field :email,
              autocomplete: "email",
              placeholder: "your@email.com",
              class: "input-field" %>
        </div>

        <%# Password Field %>
        <div>
          <%= f.label :password, class: "block text-sm font-semibold text-midnight-soil mb-2" %>
          <% if @minimum_password_length %>
            <span class="text-xs text-slate-mist">(<%= @minimum_password_length %> characters minimum)</span>
          <% end %>
          <%= f.password_field :password,
              autocomplete: "new-password",
              placeholder: "Create a password",
              class: "input-field" %>
        </div>

        <%# Password Confirmation Field %>
        <div>
          <%= f.label :password_confirmation, class: "block text-sm font-semibold text-midnight-soil mb-2" %>
          <%= f.password_field :password_confirmation,
              autocomplete: "new-password",
              placeholder: "Confirm your password",
              class: "input-field" %>
        </div>

        <%# Submit Button %>
        <div>
          <%= f.submit "Sign Up", class: "btn btn-secondary w-full text-lg" %>
        </div>
      <% end %>

      <%# Additional Links %>
      <div class="mt-6 pt-6 border-t border-slate-mist/20">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
